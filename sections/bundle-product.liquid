<style>
          li.grid__item.bundle_check_css {
            position: relative;
        }
        p.chckbox_enable {
          position: absolute;
          left: 0;
          z-index: 2;
          top: 0;
          transform: translate(0);
          padding: 0;
          margin: 0;
      }
      p.chckbox_enable input[type=checkbox] {
        display: inline-block;
        margin-right: .5rem;
        height: 22px;
        width: 22px;
    }
    p.total_bundle_compareproduct1 {
      text-decoration: line-through;
  }
</style>
<script>
  $(document).ready(function() {
    let variants_ids = [];
    let totalprice = 0;
    let totalcompareprice = 0;
    // Default checked checkboxes
    $('.section-block-{{section.id}} .chckbox_enable input:checked').each(function() {
        let dataselectid = $(this).attr('data-select-id');
        totalprice += parseFloat($(this).attr('data-bundle-price')); // Update totalprice
        $('.total_bundle_price span.main_bundle_price').html("<b>" + totalprice + "</b>");
        totalcompareprice += parseFloat($(this).attr('data-bundle-compareprice'));
        $('.main_bundle_compareprice').html("<b>" + totalcompareprice + "</b>");
        variants_ids.push(dataselectid);
    });

    // Event handler for checkbox change
    $('.section-block-{{section.id}} .chckbox_enable input').change(function() {
        let dataselectid = $(this).attr('data-select-id');
        let bundlePrice = parseFloat($(this).attr('data-bundle-price'));
        let bundlecompareprice = parseFloat($(this).attr('data-bundle-compareprice'));
        if ($(this).is(":checked")) {
            if (variants_ids.length >= 2) {
                $(this).prop('checked', true);
                totalprice += bundlePrice; // Update totalprice
                $('.total_bundle_price span.main_bundle_price').html("<b>" + totalprice + "</b>"); // Set the value of the input field with class 'main_bundle_price' to totalprice
              totalcompareprice += bundlecompareprice;
              $('.main_bundle_compareprice').html("<b>" + totalcompareprice + "</b>");
                variants_ids.push(dataselectid);
                // console.log("Checkbox checked, dataselectid>>>>>", dataselectid);
            }
        } else {
            if (variants_ids.length <= 2) {
                $(this).prop('checked', true); // Check the checkbox if less than two are unchecked
                // console.log("Minimum limit reached. Checkbox cannot be unchecked.");
            } else {
                let index = variants_ids.indexOf(dataselectid);
                if (index !== -1) {
                    variants_ids.splice(index, 1);
                    totalprice -= bundlePrice;
                    $('.total_bundle_price span.main_bundle_price').html("<b>" + totalprice + "</b>");
                     totalcompareprice -= bundlecompareprice;
                    $('.main_bundle_compareprice').html("<b>" + totalcompareprice + "</b>");

                    // console.log("Checkbox unchecked, dataselectid>>>>>", dataselectid);
                }
            }
        }
    });

    console.log("Initial checked checkboxes>>>>>>", variants_ids); // all variant id here
    console.log("Initial total price>>>>>>", totalprice);
    console.log("Initial total Compare price>>>>>>", totalcompareprice);

  $('.section-block-{{section.id}} #tab-add-to-cart').click(function() {
       var variants_ids = [];
       $('.section-block-{{section.id}} .chckbox_enable input:checked').each(function() {
           var variant_id = $(this).attr('data-select-id');
           // console.log("productId>>>>>", variant_id);
         if(variant_id){
           variants_ids.push({
               'id': variant_id,
               'quantity': 1
           });
         }
       }).promise().done(function() {
           bundleproduct(variants_ids);

       });
   });
  function bundleproduct(variants_ids) {
     var formData = {
         'items': variants_ids,
         sections: 'cart'
     };
     fetch(window.Shopify.routes.root + 'cart/add.js', {
         method: 'POST',
         headers: {
             'Content-Type': 'application/json'
         },
         body: JSON.stringify(formData)
     }).then(response => {
         return response.json();
     }).then(result => {
         // Assuming Shopify.getCart is a custom function
        window.location.href = '/cart';
         // getCart((cart) => {
         //    window.location.href = '/cart';
         // });
     }).catch((error) => {
         console.error('Error:', error);
     });
    }

   });
</script>
